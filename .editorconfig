# EditorConfig is awesome: https://editorconfig.org/

# top-most EditorConfig file
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[{*.php}]
indent_size = 4

[{*.json,*.md,*.yml}]
indent_size = 2

[{*.html,*.css,*.scss,*.js,*.ts,*.tsx,*.cjs,*.mjs}]
indent_size = 2
